{
  "extends": [
    "next",
    "eslint-config-prettier"
  ],
  "plugins": [
    "eslint-plugin-prettier"
  ],
  "rules": {
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120,
        "tabWidth": 2,
        "arrowParens": "avoid"
      }
    ]
  }
}